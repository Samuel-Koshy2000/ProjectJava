<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.womenshopfx.AddProductController">
    <children>
        <Label layoutX="20.0" layoutY="10.0" text="Add New Product" />

        <!-- TabPane for Product Categories -->
        <TabPane layoutX="20.0" layoutY="40.0" prefHeight="300.0" prefWidth="400.0">
            <tabs>

                <!-- Clothing Tab -->
                <Tab text="Clothing">
                    <AnchorPane>
                        <Label layoutX="14.0" layoutY="14.0" text="Product Name:" />
                        <TextField fx:id="clothingNameField" layoutX="120.0" layoutY="10.0" />

                        <Label layoutX="14.0" layoutY="54.0" text="Purchase Price:" />
                        <TextField fx:id="clothingPurchasePriceField" layoutX="120.0" layoutY="50.0" />

                        <Label layoutX="14.0" layoutY="94.0" text="Sell Price:" />
                        <TextField fx:id="clothingSellPriceField" layoutX="120.0" layoutY="90.0" />

                        <Label layoutX="14.0" layoutY="134.0" text="Discount:" />
                        <TextField fx:id="clothingDiscountField" layoutX="120.0" layoutY="130.0" />

                        <Label layoutX="14.0" layoutY="174.0" text="Size:" />
                        <TextField fx:id="clothingSizeField" layoutX="120.0" layoutY="170.0" />

                        <Button fx:id="clothingSaveButton" layoutX="120.0" layoutY="210.0" mnemonicParsing="false" onAction="#saveClothing" prefHeight="26.0" prefWidth="47.0" text="Save" />

                        <Button fx:id="cancelButton" layoutX="213.0" layoutY="210.0" mnemonicParsing="false" onAction="#cancelAddProduct" text="Cancel" />

                    </AnchorPane>
                </Tab>

                <!-- Accessories Tab -->
                <Tab text="Accessories">
                    <AnchorPane>
                        <Label layoutX="14.0" layoutY="14.0" text="Product Name:" />
                        <TextField fx:id="accessoriesNameField" layoutX="120.0" layoutY="10.0" />

                        <Label layoutX="14.0" layoutY="54.0" text="Purchase Price:" />
                        <TextField fx:id="accessoriesPurchasePriceField" layoutX="120.0" layoutY="50.0" />

                        <Label layoutX="14.0" layoutY="94.0" text="Sell Price:" />
                        <TextField fx:id="accessoriesSellPriceField" layoutX="120.0" layoutY="90.0" />

                        <Label layoutX="14.0" layoutY="134.0" text="Discount:" />
                        <TextField fx:id="accessoriesDiscountField" layoutX="120.0" layoutY="130.0" />

                        <Button fx:id="accessoriesSaveButton" layoutX="120.0" layoutY="170.0" mnemonicParsing="false" onAction="#saveAccessories" text="Save" />
                  <Button fx:id="cancelButton1" layoutX="187.0" layoutY="170.0" mnemonicParsing="false" onAction="#cancelAddProduct" text="Cancel" />
                    </AnchorPane>
                </Tab>

                <!-- Footwear Tab -->
                <Tab text="Footwear">
                    <AnchorPane>
                        <Label layoutX="14.0" layoutY="14.0" text="Product Name:" />
                        <TextField fx:id="footwearNameField" layoutX="120.0" layoutY="10.0" />

                        <Label layoutX="14.0" layoutY="54.0" text="Purchase Price:" />
                        <TextField fx:id="footwearPurchasePriceField" layoutX="120.0" layoutY="50.0" />

                        <Label layoutX="14.0" layoutY="94.0" text="Sell Price:" />
                        <TextField fx:id="footwearSellPriceField" layoutX="120.0" layoutY="90.0" />

                        <Label layoutX="14.0" layoutY="134.0" text="Discount:" />
                        <TextField fx:id="footwearDiscountField" layoutX="120.0" layoutY="130.0" />

                        <Button fx:id="footwearSaveButton" layoutX="120.0" layoutY="170.0" mnemonicParsing="false" onAction="#saveFootwear" text="Save" />
                  <Button fx:id="cancelButton11" layoutX="186.0" layoutY="170.0" mnemonicParsing="false" onAction="#cancelAddProduct" text="Cancel" />
                    </AnchorPane>
                </Tab>

            </tabs>
        </TabPane>
    </children>
</AnchorPane>
