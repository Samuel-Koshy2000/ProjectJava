<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.womenshopfx.ModifyProductController">
    <center>
        <TableView fx:id="modifyProductTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="nameColumn" text="Name" />
                <TableColumn fx:id="purchasePriceColumn" text="Purchase Price" />
                <TableColumn fx:id="sellPriceColumn" text="Sell Price" />
                <TableColumn fx:id="discountColumn" text="Discount" />
                <TableColumn fx:id="sizeColumn" text="Size" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" alignment="center">
            <Button text="Save Changes" onAction="#handleSaveChanges"/>
            <Button text="Cancel" onAction="#handleCancel"/>
        </HBox>
    </bottom>
</BorderPane>
